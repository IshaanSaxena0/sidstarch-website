---
import Layout from "~/layouts/Layout.astro";
import Section from "~/components/Section.astro";
import Hero from "~/components/Hero.astro";
import { Picture, Image } from "astro:assets";
import Badge from "~/components/Badge.astro";
import Button from "~/components/Button.astro";
import ButtonCallUs from "~/components/ButtonCallUs.astro";
import Grid from "~/components/Grid.astro";
import Heading from "~/components/Heading.astro";
import WideImage from "~/components/WideImage.astro";
import ReviewSlider from "~/components/ReviewSlider.astro";

// Images
import PizzaHero from "~/assets/images/pizza-hero.png";
import factoryHero from "~/assets/images/factory-packaging.png";
import Pizza from "~/assets/images/food-grade.png";
import Spaghetti from "~/assets/images/textile-grade.png";
import Fish from "~/assets/images/paper-starch.png";
import DecorativeImage from "~/assets/images/potatobg.png";
import reviewAuthors from "~/assets/images/review-authors.png";
import powering from "../assets/images/powering-industries.png"
import Dessert from "~/assets/images/customer-delivery.jpeg";
import Mussels from "~/assets/images/mussels2.png";
---

<Layout title="Home" pageTitle="Home" description="Welcome to our restaurant!">
	<Section class:list={"bg-white"}>
		<Hero>
			<div slot="hero-content-left" class="prose max-w-none max-lg:order-1">
				<Badge title="ISO-Certified Manufacturer" />
				<h1 class="font-black">Reliable Starch Solutions for a Stronger Tomorrow...</h1>

				<p>
					Leading the industry with high-quality industrial and food-grade starch products for textiles, paper, 
					pharmaceuticals, food processing, and more.
				</p>

				<span class="text-brand-green font-medium">✔ We also deliver</span>

				<div class="mt-8 flex items-center gap-x-8">
					<Button url="/menu">View Products</Button>
					<Button url="/book">Enquire Now</Button>
					<ButtonCallUs />
				</div>
			</div>
			<div slot="hero-content-right">
				<Picture
					class:list={"mx-auto"}
					src={factoryHero}
					height={600}
					formats={["avif", "webp"]}
					alt="A description of my image."
					loading={"eager"}
					fetchpriority={"high"}
				/>
			</div>
		</Hero>
	</Section>

	<WideImage image={DecorativeImage} alt="Just an image" class:list={"aspect-video lg:aspect-[16/6]"} />

	<Section class:list={"bg-white"}>
		<Heading>
			<h2 slot="heading-title" class="font-black text-brand-green h2"> Our Starch Product Range</h2>
			<p slot="heading-content">
				We offer a versatile portfolio of starch products used across industries — manufactured with precision, delivered with trust.
			</p>
		</Heading>

		<Grid>
			<div slot="grid-content-1">
				<div class="flex flex-col items-center prose text-center">
					<Picture
						class:list={"not-prose w-full h-auto"}
						src={Pizza}
						formats={["avif", "webp"]}
						alt="A description of my image."
					/>
					<h3 class="h4 mt-0 font-black">Food Grade Starch</h3>
					<p>
						Suitable for confectionery, noodles, sauces, and baking applications.
					</p>
				</div>
			</div>

			<div slot="grid-content-2">
				<div class="flex flex-col items-center prose text-center">
					<Picture
						class:list={"not-prose w-full h-auto"}
						src={Spaghetti}
						formats={["avif", "webp"]}
						alt="A description of my image."
					/>
					<h3 class="h4 mt-0 font-black">Textile Grade Starch</h3>
					<p>
						High viscosity, ideal for sizing and finishing in textile processing.
					</p>
				</div>
			</div>

			<div slot="grid-content-3">
				<div class="flex flex-col items-center prose text-center">
					<Picture
						class:list={"not-prose w-full h-auto"}
						src={Fish}
						formats={["avif", "webp"]}
						alt="A description of my image."
					/>
					<h3 class="h4 mt-0 font-black">Paper &amp; Corrugated Starch</h3>
					<p>
						Enhances strength, surface quality, and printability of paper products.
					</p>
				</div>
			</div>
		</Grid>
	</Section>

	<Section class:list={"bg-white"}>
		<Hero>
			<div slot="hero-content-left" class="prose lg:order-2">
				<h1 class="font-black">Powering Performance Across Industries</h1>

				<p>
					From thickening sauces to strengthening paper — our starch is crafted to meet the diverse demands of food, 
					textile, packaging, pharma, and adhesives industries. Explore how our products help drive quality and 
					efficiency across sectors.
				</p>

